/* 点击充值弹窗 */
 
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}
 
.modalDlg {
  width: 580rpx;
  height: 450rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.choose{
  margin-top:40rpx;
  margin-bottom: 50rpx;
}
 
.userID {
  color: #000;
  width: 580rpx;
  height: 140rpx;
  line-height: 140rpx;
  background: #fff;
  text-align: center;
  border-radius: 0;
  margin-top: 0;
  font-size: 28rpx;
  text-indent: 0em;
}

